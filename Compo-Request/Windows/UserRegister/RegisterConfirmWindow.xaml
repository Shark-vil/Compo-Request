<Window x:Class="Compo_Request.Windows.UserRegister.RegisterConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Compo_Request.Windows.UserRegister"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Title="Окно ввода кода подтверждения" Height="200" Width="350">
    <Grid>
        <StackPanel Margin="10, 30, 10, 20">
            <Grid Height="80">
                <StackPanel>
                    <TextBlock FontSize="16" TextAlignment="Center" Text="Код с почты"/>
                    <TextBox Height="25" BorderBrush="Black"/>
                </StackPanel>
            </Grid>
            <Grid Margin="0,10,0,0" Height="30">
                <Button HorizontalAlignment="Left" Content="Проверить" Width="130"/>
                <Button HorizontalAlignment="Right" Content="Отправить повторно" Width="130"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
