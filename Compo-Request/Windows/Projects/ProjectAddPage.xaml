<Page x:Class="Compo_Request.Windows.Projects.ProjectAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Compo_Request.Windows.Projects"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectAddPage">

    <Grid>
        <Grid VerticalAlignment="Top" Height="70">
            <TextBlock Margin="15" FontSize="24" Text="Создание проекта"/>
        </Grid>

        <Grid Margin="150, 100, 150, 30">
            <StackPanel Margin="10" Orientation="Vertical">
                <TextBlock Margin="0, 10" Text="Название проекта"/>
                <TextBox x:Name="TextBox_ProjectName"/>

                <TextBlock Margin="0, 10" Text="Уникальный идентификатор"/>
                <TextBox x:Name="TextBox_ProjectUid"/>

                <Grid Margin="0, 30">
                    <Button x:Name="Button_ProjectAdd"
                        HorizontalAlignment="Left" Height="25" Width="100" Content="Создать"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
